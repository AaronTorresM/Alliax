	/* One column layout */
	.one-column .contents {
		text-align: left;
	}
	.one-column p {
		font-size: 14px;
		Margin-bottom: 10px;
	}

	/*Two column layout*/
	.two-column {
		text-align: center;
		font-size: 0;
	}
	.two-column .column {
		width: 100%;
		max-width: 300px;
		display: inline-block;
		vertical-align: top;
	}
